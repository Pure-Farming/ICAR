{
    "description": "Event for recording group or mob feeding.",
    "type": "object",
    "$id": "/livestock/feed/icarGroupFeedingResource",
    "allOf": [
        {
            "$ref": "https://raw.githubusercontent.com/Pure-Farming/ICAR/ADE-1/resources/icarGroupEventCoreResource.json"
        }
    ],
    "required": [
        "feedingStartingDateTime",
        "feedVisitDuration"
    ],
    "properties": {
        "feedingStartingDateTime": {
            "$ref": "https://raw.githubusercontent.com/Pure-Farming/ICAR/ADE-1/types/icarDateTimeType.json",
            "description": "The RFC3339 UTC moment the feeding started.  (Note that eventDateTime represents the end of feeding.)"
        },
        "feedVisitDuration": {
            "$ref": "https://raw.githubusercontent.com/Pure-Farming/ICAR/ADE-1/types/icarFeedDurationType.json",
            "description": "The length of time of the feeding."
        },
        "feedPerAnimal": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/Pure-Farming/ICAR/ADE-1/types/icarConsumedFeedType.json",
                "description": "Gives the feed offered to and consumed per animal."
            }
        },
        "rationPerAnimal": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/Pure-Farming/ICAR/ADE-1/types/icarConsumedRationType.json",
                "description": "Gives the ration offered to and consumed per animal."
            }
        },
        "device": {
            "$ref": "https://raw.githubusercontent.com/Pure-Farming/ICAR/ADE-1/types/icarDeviceReferenceType.json",
            "description": "Optional information about a device used for the feeding, if relevant."
        }
    }
}